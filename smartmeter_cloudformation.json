          },
          "uri": { "Fn::Join" :  [ "",
                    [ "arn:aws:apigateway:", { "Ref" : "AWS::Region" }, ":lambda:path/2015-03-31/functions/",{ "Fn::GetAtt" : [ "SmartMeterLambdaFunctionReadFromDynamo", "Arn" ] }, "/invocations" ]
                  ]
                },
          "passthroughBehavior": "when_no_templates",
          "responses": {
            "default": {
              "statusCode": "200",
